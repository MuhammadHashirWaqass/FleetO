<!--                android:ems="10"-->
<!--                android:hint="Enter Driver ID"-->
<!--                android:inputType="text"-->
<!--                android:paddingVertical="16sp" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password" />

            <EditText
                android:id="@+id/AddingDriverPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Enter Driver password"
                android:inputType="textPassword"
                android:paddingVertical="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password" />

            <EditText
                android:id="@+id/AddingDriverConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Confirm Driver password"
                android:inputType="textPassword"
                android:paddingVertical="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle" />

            <EditText
                android:id="@+id/AddingDriverVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Enter Driver's Vehicle"
                android:paddingVertical="16sp" />

            <Button
                android:id="@+id/ConfirmDriverBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Add" />

        </LinearLayout>
    </ScrollView>


